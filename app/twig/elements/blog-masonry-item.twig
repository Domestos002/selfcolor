                    {% include "blog-masonry-index.twig" %}
                </div>
            </div>
        </div>
        <div class="blog-masonry__item-caption">
            {% if length == 'short' %}
                <p>
                    Lorem ipsum dolor sit amet.
                </p>
            {% endif %}
            {% if length == 'large' %}
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit. Deserunt, hic.
                </p>
            {% endif %}
        </div>
    </div>
